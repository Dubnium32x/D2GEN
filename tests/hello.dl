import std.stdio;

struct Point {
    int x;
    int y;
};

void printPoint(Point p) {
    writeln("Point: (", p.x, ", ", p.y, ")");
}

void describe(int code) {
    switch (code) {
        case 1:
            writeln("Code is one");
            break;
        case 2:
            writeln("Code is two");
            break;
        default:
            writeln("Unknown code");
            break;
    }
}

void main() {
    Point pt;
    pt.x = 7;
    pt.y = 8;

    void function(Point) fp;
    fp = &printPoint;
    fp(pt);

    int val = 2;
    describe(val);

    val = 42;
    describe(val);
}
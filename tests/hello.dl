import std.stdio;

int sumArray(int[] arr, int len) {
    int sum = 0;
    for (int i = 0; i < len; i++) {
        sum += arr[i];
    }
    return sum;
}

void main() {
    int[] arr = [5, 3, 8, 1, 4];
    int len = 5;
    writeln("Original array:");
    for (int i = 0; i < len; i++) {
        write(arr[i], " ");
    }
    writeln();

    // Find max value
    int max = arr[0];
    for (int i = 1; i < len; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
    }
    writeln("Max value: ", max);

    // Set all even elements to zero
    for (int i = 0; i < len; i++) {
        if (arr[i] % 2 == 0) {
            arr[i] = 0;
        }
    }

    writeln("Modified array:");
    for (int i = 0; i < len; i++) {
        write(arr[i], " ");
    }
    writeln();

    int total = sumArray(arr, len);
    writeln("Sum of modified array: ", total);
}
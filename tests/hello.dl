// Test file for mixin functionality with parameters and structs

// Define a mixin template with parameters
mixin template Scalable(int factor) {
    int scale(int value) {
        return value * factor;
    }
}

// Define a mixin template for struct functionality
mixin template PrintableStruct(string structName) {
    void printStruct() {
        import std.stdio;
        writeln(structName, " contents: ", this);
    }
}

// Define a struct that uses mixins
struct Point {
    int x, y;

    // Add scaling functionality with a factor of 2
    mixin Scalable!(2);

    // Add printing functionality
    mixin PrintableStruct!("Point");
};

// Main function to test mixins
void main() {
    import std.stdio;

    writeln("Testing mixin functionality with parameters and structs");

    // Create a Point instance
    Point p = Point(3, 4);

    // Use the scale method from the Scalable mixin
    writeln("Scaled x:", p.scale(p.x));
    writeln("Scaled y:", p.scale(p.y));

    // Use the printStruct method from the PrintableStruct mixin
    p.printStruct();

    writeln("Mixin test completed");
}

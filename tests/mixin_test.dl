// mixin_test.dl - Test file for mixin functionality

// Define a mixin template
mixin template PrintableInt() {
    // This template adds printing functionality to an int
    void printMe() {
        print("Value is: ", this);
    }
}

// Define a mixin template for common math operations
mixin template MathOps() {
    int square(int x) {
        return x * x;
    }
    
    int cube(int x) {
        return x * x * x;
    }
    
    int abs(int x) {
        if (x < 0) {
            return -x;
        }
        return x;
    }
}

// Main function to test mixins
void main() {
    print("Testing mixin functionality");
    
    // Use the MathOps mixin
    mixin MathOps;
    
    int num = 5;
    print("Square of 5:", square(num));
    print("Cube of 5:", cube(num));
    print("Abs of -10:", abs(-10));
    
    // Demonstrate string mixin for simple code generation
    mixin("int generated = 42;");
    print("Generated value:", generated);
    
    print("Mixin test completed");
}
